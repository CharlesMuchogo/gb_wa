<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".TwoStepVerification">



<TextView
    android:id="@+id/twoStepVerificationLabel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/two_step_verification"
    android:textColor="@color/black"
    android:textSize="20sp"
    android:textStyle="bold"
    android:gravity="center"
    android:layout_marginTop="30dp"
    />

    <TextView
    android:id="@+id/phoneNumberLabel"
        android:layout_below="@+id/twoStepVerificationLabel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/create_a_6_digit_pin_that_you_can_remember"
    android:textColor="@color/colorPrimary"
    android:textSize="15sp"
    android:textStyle="bold"
    android:gravity="center"
    android:layout_marginTop="20dp"
    />

    <EditText
        android:id="@+id/editTwostep"
        android:layout_below="@+id/phoneNumberLabel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="*  *  *    *  *  *"
        android:layout_centerHorizontal="true"
        android:inputType="phone"
        android:maxLength="10"
        android:padding="10dp"
        android:gravity="center"

        />





<Button
    android:id="@+id/continueButton"
    android:layout_below="@id/editTwostep"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:text="Next"
    android:textColor="#FFFFFF"
    android:background="@drawable/rectangular_button_bg"
    />


</RelativeLayout>


