<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".AutofillCode">




<TextView
    android:id="@+id/verifyDescription"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/enter_the_code_we_sent_to_your_phone_number"
    android:textColor="@color/black"
    android:gravity="center"
    android:textSize="20sp"
    android:layout_marginTop="70dp"
    />


<com.google.android.flexbox.FlexboxLayout
    android:id="@+id/code"
    android:layout_below="@id/verifyDescription"
    android:layout_width="match_parent"
    app:flexDirection="row"
    android:gravity="center"
    app:justifyContent="center"
    android:layout_height="wrap_content">
    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="7"
        android:inputType="phone"
        android:maxLength="10"
        android:padding="10dp"
        />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="5"
        android:inputType="phone"
        android:maxLength="10"
        android:padding="10dp"
        />
    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="8"
        android:inputType="phone"
        android:maxLength="10"
        android:padding="10dp"
        />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="2"
        android:inputType="phone"
        android:maxLength="10"
        android:padding="10dp"
        />
</com.google.android.flexbox.FlexboxLayout>




<Button
    android:id="@+id/continueButton"
    android:layout_below="@id/code"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:text="Continue"
    android:textColor="#FFFFFF"
    android:background="@drawable/rectangular_button_bg"
    />

</RelativeLayout>